body {
  font-family: Arial, sans-serif;
  margin: 20px;
}

.container {
  max-width: 600px;
  border: 1px solid #333;
  padding: 20px;
}

h2 {
  margin-top: 0;
}

label {
  font-weight: bold;
}

select {
  margin-left: 10px;
  padding: 5px;
}

.product-list {
  margin-top: 20px;
}

.product-item {
  border: 1px solid #ddd;
  padding: 10px;
  margin-bottom: 8px;
  border-radius: 4px;
}
